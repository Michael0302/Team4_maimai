    <script>
        $(".btnhome").hover(function () {
            $(this).addClass("classhoverin")
        }, function () {
            $(this).removeClass("classhoverin")
        })
        $(".btnhome").click(function () {
            $(this).removeClass("btnhome > a")
            $(this).removeClass("btnhome")
            $(this).addClass("classclick")
            $(this).off("hover")
        })
    </script>
