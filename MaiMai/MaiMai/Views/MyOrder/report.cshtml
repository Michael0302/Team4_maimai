                       標籤
                    </button>

                    <div class="dropdown-menu">
                    <div id="reportTags"class="btn-group" role="group" aria-label="Basic checkbox toggle button group">
                
                    </div>
                    </div>
                 </div>

                <div class="d-flex justify-content-center">
                <div class="align-content-center">
                <label >內容描述</label>
                </div>
                <div>
                <textarea id="reportTXT" rows="6" cols="20"></textarea>
                </div>
                </div>
`);
                console.log("12345");
                $(result).each(function (index, item) {
                    console.log("12345");
                    $("#reportTags").append(`
                <input type = "checkbox" class= "btn-check" id = "btncheck${index}"value="${index}" autocomplete = "off" >
                <label class="btn btn-outline-primary" for="btncheck${index}" ">${item.reason}</label>`)
                })
                
            }
        })
    }

    function saveReport() {
        var reportTAG = new Array();
        $('input:checked').each(function (i) { reportTAG[i] = $(this).val(); });

        $.ajax({
            url: "@Url.Action("saveReport","MyOrder")",
            data: { reportTXT: $("#reportTXT").val(), reportTAG: reportTAG },
            type: "POST",
